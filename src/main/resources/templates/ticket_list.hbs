<div class="container text-center" id="ticket_list">
    <table class="table table-bordered">
        <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {{#each tickets}}
            <tr>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td class="gap-2">
                    <button
                            class="btn btn-primary"
                            hx-get="/ticket/getTicketByID/{{id}}"
                            hx-target="#mustache_modal"
                            hx-trigger="click"
                            data-bs-toggle="modal"
                            data-bs-target="#ticketModel"
                    >
                        Edit
                    </button>
                    <button
                            class="btn btn-danger"
                            hx-delete="/ticket/deleteTicketByID/{{id}}"
                            hx-target="#ticket_list"
                            hx-trigger="click"
                    >
                        Delete
                    </button>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>