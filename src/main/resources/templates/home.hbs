{{>header}}
<div class="d-flex justify-content-center w-100">
    <div class="w-100 m-5 border rounded d-flex flex-column justify-content-center">
        <div class="d-flex justify-content-center position-relative">
            <div class="h4 text-center">Tickets</div>
        </div>
        <div class="p-2">
            <button
                    class="btn btn-primary"
                    hx-get="/ticket/new"
                    hx-target="#mustache_modal"
                    hx-trigger="click"
                    data-bs-toggle="modal"
                    data-bs-target="#ticketModel"
            >
                Register ticket
            </button>
        </div>
        <div class="container text-center">
            <table class="table table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {{#each this}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{description}}</td>
                        <td>
                            <button
                                    class="btn btn-primary"
                                    hx-get="/ticket/getTicketByID/{{id}}"
                                    hx-target="#mustache_modal"
                                    hx-trigger="click"
                                    data-bs-toggle="modal"
                                    data-bs-target="#ticketModel"
                            >
                                Edit
                            </button>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div
            class="modal fade"
            id="ticketModel"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
    >
        <div class="modal-dialog modal-dialog-centered" id="mustache_modal">
        </div>
    </div>
</div>
{{>footer}}